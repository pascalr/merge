<% if !document.folder_id and params[:folder_id] %>
  <% document.folder_id = params[:folder_id] %>
<% end %>
<%= form_with(model: document, local: true) do |form| %>
  <% if document.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(document.errors.count, "error") %> prohibited this document from being saved:</h2>

      <ul>
        <% document.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
    
  <div class="field">
    <%= form.label :folder_id %>
    <%= form.collection_select :folder_id, Folder.order(:name).all, :id, :name, include_blank: "/" %>
  </div>

  <div class="field">
    <%= form.label :extension %>
    <%= form.text_field :extension %>
  </div>
  
  <div class="actions">
    <%= form.submit nil, id: 'submit-button' %>
  </div>

  <% unless document.new_record? %>
    <%=
      case document.extension
      when "ejs" then render 'documents/ejs/form', form: form
      when "erb" then render 'documents/erb/form', form: form
      when "quill" then render 'documents/quill/form', form: form
      else render 'documents/trix/form', form: form
      end
    %>
  <% end %>

<% end %>
