Nouveau dossier:
<%= form_with url: create_folder_path, remote: true, style: 'display: inline;' do |f| %>
  <%= f.text_field :name, style: 'display: inline;' %>
  <%= f.submit %>
<% end %>
Nouveau fichier:
<%= form_with url: create_file_path, remote: true, style: 'display: inline;' do |f| %>
  <%= f.text_field :name, style: 'display: inline;' %>
  <%= f.submit %>
<% end %>

<h1><%= @folder.blank? ? "/" : @folder %></h1>

<% (@folders || []).each do |f| %>
  📁<%= link_to f, views_path(folder: Pathname(@folder).join(f)) %><br>
<% end %>

<% @images.each do |im| %>
  <%= image_tag image_path(name: im, folder: @folder), style: 'object-fit: cover; width: 128px; height: 128px;' %>
<% end %>
<br>

<% (@files || []).each do |f| %>
  🗎<%= link_to f, view_path(name: f, folder: @folder) %>
  <%= link_to 'delete', view_path(name: f, folder: @folder) , method: 'delete', data: {confirm: 'Are you sure?'}%>
  <br>
<% end %>
